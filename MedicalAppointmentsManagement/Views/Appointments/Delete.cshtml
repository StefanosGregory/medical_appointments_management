@model MedicalAppointmentsManagement.Models.APPOINTMENT

@{
    ViewBag.Title = "Delete";
}

@* Label *@
<div class="row">
    <div class="col-lg-8 mx-auto">
        <h1 class="display-5">Delete</h1>
    </div>
</div>

@* Delete *@
<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="border border-dark bg-dark rounded p-2">
            <h1 class="display-6 pb-1">
                Are you sure you want to delete this?
            </h1>

            <dl class="dl-horizontal ps-1">
                <dt>
                    @Html.DisplayNameFor(model => model.date)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.date)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.startSlotTime)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.startSlotTime)
                </dd>

                @if (Session["UserAMKA"] == null)
                {
                    <dt>
                        @Html.DisplayNameFor(model => model.PATIENT.name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PATIENT.name)
                    </dd>
                }
                @if (Session["doctorAMKA"] == null)
                {
                    <dt>
                        Doctor
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DOCTOR.name)
                        @Html.DisplayFor(model => model.DOCTOR.surname)
                    </dd>
                    <dt>
                        Specialty
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DOCTOR.specialty)
                    </dd>
                }
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <button type="submit" class="btn btn-outline-danger">Delete</button><br/>
                    @Html.ActionLink("Cancel", "/")
                </div>
            }

        </div>
    </div>
</div><br>