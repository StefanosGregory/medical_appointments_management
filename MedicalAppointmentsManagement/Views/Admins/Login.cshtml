@model MedicalAppointmentsManagement.Models.ADMIN

@{
    ViewBag.Title = "Login";
}

@* Label *@
<div class="row">
    <div class="col-md-5 col-7 col-xl-4 mx-auto">
        <h1 class="display-5">Login</h1>
    </div>
</div>

@using (Html.BeginForm("Login", "Admins", FormMethod.Post))
{
    @* Login *@
    <div class="row">
        <div class="col-md-5 col-7 col-xl-4 mx-auto">
            <div class="border border-dark bg-dark rounded p-2">
                <h1 class="display-6 pb-1">
                    Admin
                </h1>
                @if (ViewData["Error"] != null)
                {
                    @Html.Partial("_StatusMessages")
                }
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                    <div class="mb-3">
                        @Html.LabelFor(model => model.username, htmlAttributes: new {@class = "form-label"})
                        @Html.EditorFor(model => model.username, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.username, "", new {@class = "text-danger"})
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(model => model.password, htmlAttributes: new {@class = "form-label"})
                        @Html.EditorFor(model => model.password, new {htmlAttributes = new {@class = "form-control",  type = "password"  }})
                        @Html.ValidationMessageFor(model => model.password, "", new {@class = "text-danger"})

                    </div>
                    <button type="submit" class="btn btn-outline-primary">Login</button>
            </div>
        </div>
    </div><br>
}
